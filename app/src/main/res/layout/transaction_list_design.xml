<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.deposit.DepositFragment">


    <TextView
        android:id="@+id/lastTransaction"
        android:layout_width="185dp"
        android:layout_height="106dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/rightside_rounded_corner_style"
        android:gravity="center"
        android:text="@string/latest_transaction"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="48dp" />

    <ImageButton
        android:id="@+id/iconKindOfTransaction"
        android:layout_width="185dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/leftside_rounded_corner_style"
        android:padding="25dp"
        android:scaleType="fitCenter"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/lastTransaction"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>